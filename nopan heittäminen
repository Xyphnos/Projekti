package tehtävät4;
import java.util.Random;
import java.util.Scanner;
public class nopanhetto {
Scanner Lukija = new Scanner(System.in);
    int heittoja;
     private int sivuja;
    private Random random;
    private int kuusiSivuinennoppan;
    
    private Pelimerkit pelimerkit;  
public void setnopanhetto(Pelimerkit pelimerkit){
    this.pelimerkit = pelimerkit;
}
   
    public nopanhetto(int sivuja) {
        this.sivuja = sivuja;
        this.random = new Random();
    }
         

    public int heitto() {
        return this.random.nextInt(sivuja) + 1;
        
       
         
    }
}
